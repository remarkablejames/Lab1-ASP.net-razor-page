@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Statistics</h1>
    <p>Enter one, two or three numerical numbers and click calculate button to get their statistics</p>
    <form method="post">
        <div>
            <label for="Number1">Number 1</label>
            <input type="number" id="Number1" name="Number1" value=@($"{Model.Number1}") />
        </div>
        
        <div>
            <label for="Number2">Number 2</label>
            <input type="number" id="Number2" name="Number2" value=@($"{Model.Number2}")/>
        </div>
        
        <div>
            <label for="Number3">Number 3</label>
            <input type="number" id="Number3" name="Number3" value=@($"{Model.Number3}")/>
        </div>
        
        <button type="submit" class="btn btn-primary" >Calculate</button>

    </form>
    @if(Model.Total != null)
    {
        <p>You entered: @Model.Counter below are their stats</p>
        <p>Total: @Model.Total</p>
        <p>Maximum: @Model.MaxValue</p>
        <p>Minimum: @Model.MinValue</p>
        <p> Average: @Model.Average</p>                           
    }
</div>